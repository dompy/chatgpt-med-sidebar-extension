{
  "manifest_version": 3,
  "name": "ChatGPT Sidebar (Final)",
  "version": "1.3",
  "permissions": ["storage", "scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["chat.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}